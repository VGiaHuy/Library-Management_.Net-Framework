
@{
    ViewBag.Title = "Phiếu Mượn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- Hiển thị danh sách NhanViens -->
<section class="content">
    <div class="container-fluid pt-4">
        <div class="row">
                <div class="col-8">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="text-center">Tạo Phiếu Mượn</h3>
                        </div>
                        <div class="col-12">
                            <form>
                                <div class="form-group">
                                    <label for="name">Tên độc giả:</label>
                                    <input type="text" class="form-control" id="name" name="name">
                                </div>
                                <div class="form-group">
                                    <label for="book">Sách mượn:</label>
                                    <input type="text" class="form-control" id="book" name="book">
                                </div>
                                <div class="form-group">
                                    <label for="return_date">Ngày trả:</label>
                                    <input type="date" class="form-control" id="return_date" name="return_date">
                                </div>
                                <button type="submit" class="btn btn-primary">Mượn sách</button>
                            </form>
                        </div>
                    </div>
                </div>
            <div class="col-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text-center">Thông Tin Độc Giả</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-hover mx-auto">
                            <thead>
                                <tr>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>

